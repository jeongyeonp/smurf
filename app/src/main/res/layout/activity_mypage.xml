<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage">

    <RelativeLayout
        android:layout_width="406dp"
        android:layout_height="match_parent"
        android:background="#FF9C00"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/mainpage" />

        <TextView
            android:id="@+id/mpuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="223dp"
            android:text=" "
            android:textSize="20dp" />

        <ListView
            android:id="@+id/mpallergy"
            android:layout_width="304dp"
            android:layout_height="221dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/mpuser"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="117dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:divider="#FFA619"
            android:dividerHeight="1dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/mp_al"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:background="#0060B2"
            android:text="   나의 알러지 성분 선택  >   "
            android:textColor="#FFFFFF" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>