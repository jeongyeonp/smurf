<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodinfo2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9C00"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/title_info2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            app:srcCompat="@drawable/foodinfo_title" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title_info2"
            android:background="#FFFFFF"
            tools:layout_editor_absoluteY="100dp" />

        <ImageView
            android:id="@+id/foodview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/line2"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/tmp_but3" />

        <TextView
            android:id="@+id/allergytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_below="@+id/foodview"
            android:text="알러지 정보"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextureView
            android:id="@+id/allergy"
            android:layout_width="357dp"
            android:layout_height="100dp"
            android:layout_below="@+id/allergytitle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/ingretitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_below="@+id/allergy"
            android:layout_marginTop="10dp"
            android:text="유의 재료 정보"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextureView
            android:id="@+id/ingre"
            android:layout_width="356dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ingretitle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/but_confirm"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/ingre"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="15dp"
            android:background="#00a6ff"
            android:gravity="center"
            android:text="확인" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>